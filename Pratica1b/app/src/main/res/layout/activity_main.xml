<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAutofill="no"
    tools:context=".MainActivity">

    <!-- Título da aplicação -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SimpleCalc"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:background="@color/gray"

        />

    <!-- Label Valor 1 -->
    <TextView
        android:id="@+id/label_valor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor 1:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp" />

    <!-- Entrada do Valor 1 -->
    <EditText
        android:id="@+id/input_valor1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Insira um valor númerico"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_valor1"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <!-- Label Valor 2 -->
    <TextView
        android:id="@+id/label_valor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Valor 2:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/input_valor1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp" />

    <!-- Entrada do Valor 2 -->
    <EditText
        android:id="@+id/input_valor2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="32dp"
        android:background="@android:drawable/editbox_background"
        android:autofillHints="none"
        android:hint="Insira um valor númerico"
        android:inputType="numberDecimal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_valor2" />

    <!-- Botões de Operações -->
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/input_valor2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_somar"
            android:backgroundTint="@color/gray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+" />

        <Button
            android:id="@+id/btn_subtrair"
            android:backgroundTint="@color/gray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-" />

        <Button
            android:id="@+id/btn_multiplicar"
            android:backgroundTint="@color/gray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="*" />

        <Button
            android:id="@+id/btn_dividir"
            android:backgroundTint="@color/gray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="/"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Resultado -->
    <TextView
        android:id="@+id/result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O Resultado é:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>